{
  "functions": {
    "source": "functions",
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "hosting": [
    {
      "target": "alex-frei",
      "public": "dist/alex-frei-cv/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "*.[0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f].+(css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public,max-age=31536000,immutable"
            }
          ]
        },
        {
          "source": "/@(ngsw-worker.js|ngsw.json)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ],
      "redirects": [
        {
          "source": "/",
          "destination": "/about-me",
          "type": 301
        },
        {
          "source": "/en",
          "destination": "/en/about-me",
          "type": 301
        },
        {
          "source": "/de",
          "destination": "/de/about-me",
          "type": 301
        },
        {
          "source": "/vi",
          "destination": "/vi/about-me",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "/api/v1/quiz",
          "function": "quiz"
        },
        {
          "source": "/api/v1/contact-form",
          "function": "contactForm"
        },
        {
          "source": "/api/v1/git-commit-count",
          "function": "gitCommits"
        },
        {
          "source": "/en/**",
          "destination": "/en/index.html"
        },
        {
          "source": "/de/**",
          "destination": "/de/index.html"
        },
        {
          "source": "/vi/**",
          "destination": "/vi/index.html"
        }
      ],
      "trailingSlash": false,
      "i18n": {
        "root": "/"
      }
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  }
}
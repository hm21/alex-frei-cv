{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "@angular/localize"
    ],
    "baseUrl": "./",
    "paths": {
      "*.svg": ["src/test/mocks/svgMock.ts"]
    },
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/test/mocks/svgMock.ts",
    "src/types.d.ts"
  ],
}